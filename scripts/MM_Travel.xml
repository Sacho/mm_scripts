      <Script isActive="yes" isFolder="no">
        <name>MM_Travel Core</name>
        <packageName></packageName>
        <script>if (not MM_Travel) then
	MM_Travel = {}
	MM_Travel.target = {}
	MM_Travel.store = {}
end

function MM_Travel:setTarget(target)
	for match, data in pairs(self.store) do
		local ci_match = string.lower(match)
		local ci_target = string.lower(target)
		if (string.find(ci_match, ci_target, 1, true)) then
			self.target = { match, data }
			echo ("Targetting " .. match)
			return
		end
	end
	echo("Could not find a target containing " .. target)
end
function MM_Travel:addLocation(coord, target)
	if (not self.store[target]) then
		echo("\nAdding travel point: " .. target .. ": " .. coord[1] .. "," .. coord[2])
      self.store[target] = coord
      MM_Util:saveTable("MM_Travel", self.store)
	end
end
function MM_Travel:showDistance(coords)
	if (self.target) then 
		local diff1 = coords[1] - self.target[2][1]
		local diff2 = coords[2] - self.target[2][2]
		echo("\nDistance to target(" .. self.target[1] .. "): " .. math.max(math.abs(diff1), math.abs(diff2)))
		local dir1 = ""
		local dir2 = ""
		if(diff1 &lt; 0) then dir1 = "E" else dir1 = "W" end
		if(diff2 &lt; 0) then dir2 = "S" else dir2 = "N" end
		echo(string.format("(%d %s, %d %s)", math.abs(diff1), dir1, math.abs(diff2), dir2))
	end
end
function MM_Travel:clearTarget()
	self.target = {}
end</script>
